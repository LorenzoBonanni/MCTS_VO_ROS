    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Run: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/.env"
        },
        {
            "name": "Python: Run without Debugging",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/.env",
            "justMyCode": false, // Includes all user and library code (optional)
            "noDebug": true // Ensures the debugger is not attached
        }
    ]
}